<div class="d-flex align-items-center h-100">
    <div class="w-100">
        <div class="container">
            <div class="row">
                <div class="col-sm-10 offset-sm-1">
                    <div class="border border-dark rounded-lg px-3 pt-3 pb-1">
                        <h1 class="display-4">Current Users:</h1>
                        <h6>{{status}}</h6>
                        <table class="table table-striped table-sm table-bordered">
                            <thead>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>User Type</th>
                                <th>Options</th>
                            </thead>
                            <tbody>
                                {{#each rows}}
                                    <tr>
                                        <td>{{this.FirstName}}</td>
                                        <td>{{this.LastName}}</td>
                                        <td>{{this.Email}}</td>
                                        <td>
                                            {{#if this.IsAdmin}}
                                                Administrator
                                            {{else}}
                                                Standard User
                                            {{/if}}
                                        </td>
                                        <td class="text-center">
                                            <a href="updateUser?id={{this.Id}}" class="btn btn-primary btn-sm" role="button">
                                                <span class="oi oi-pencil" title="pencil" aria-hidden="true"></span> Edit
                                            </a>
                                            <a href="deleteUser?id={{this.Id}}" class="btn btn-danger btn-sm" role="button">
                                                <span class="oi oi-delete" title="delete" aria-hidden="true"></span> Delete
                                            </a>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

