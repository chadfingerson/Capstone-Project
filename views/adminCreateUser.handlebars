<div class="d-flex align-items-center h-100">
    <div class="w-100">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 offset-sm-3">
                    <div class="border border-dark rounded-lg p-3">
                        <h1 class="display-4">Create New User</h1>
                        <h6>{{status}}</h6>
                        <form class="justify-content-center" action="create-user" method="post">
                            <div class="form-group">
                                <label for="firstName">First Name: </label>
                                <input class="form-control" type="text" name="firstName" id="firstName" required>
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name: </label>
                                <input class="form-control" type="text" name="lastName" id="lastName" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email: </label>
                                <input class="form-control" type="email" name="email" id="email" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password: </label>
                                <input class="form-control" type="password" name="password" id="password" required minlength="8" maxlength="20">
                            </div>
                            <div class="form-group">
                                <label>User Type:</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="standard" name="user" value="standard" checked>
                                    <label class="form-check-label" for="standard">Standard</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="admin" name="user" value="admin">
                                    <label class="form-check-label" for="admin">Administrator</label>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Create User</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>