<div class="d-flex align-items-center h-100">
    <div class="w-100">
        <div class="container">
            <div class="row">
                <div class="col-sm-10 offset-sm-1">
                    <div class="border border-dark rounded-lg px-3 pt-3 pb-1">
                        <h1 class="display-4">Awards Created By You</h1>
                        <table class="table table-striped table-sm table-bordered">
                            <thead>
                                <th>Awardee</th>
                                <th>Type of Award</th>
                                <th>Date of Award</th>
                                <th>Department</th>
                                <th>Email Address</th>
                                <th>View Certificate</th>
                                <th>Delete Award</th>
                            </thead>
                            <tbody>
                            {{#each rows}}
                                <tr>
                                    <td>{{NameOfAwardee}}</td>
                                    <td>{{TypeOfAward}}</td>
                                    <td>{{DateTimeAward}}</td>
                                    <td>{{Department}}</td>
                                    <td>{{EmailAddress}}</td>
                                    <td class="text-center">
                                        <a href="/awards/award{{Id}}.pdf" class="btn btn-success btn-sm" role="button">
                                            <span class="oi oi-document" title="document" aria-hidden="true"></span> Award
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="/users/delete/{{this.Id}}" class="btn btn-danger btn-sm" role="button">
                                            <span class="oi oi-delete" title="delete" aria-hidden="true"></span> Delete
                                        </a>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

